        }
        OBJECT pageheader_PEDIDOVENTA_NUMERO {
            fontsize = 14.0;
            halignment = right;
            value = "=input.PEDIDOVENTA_NUMERO;";
            posy = 0.2;
            sizex = 12.0;
            posx= 30.0;
            fontweight = bold;
        }
        OBJECT pageheader_PEDIDOVENTA_FECHA_CAPTION {
