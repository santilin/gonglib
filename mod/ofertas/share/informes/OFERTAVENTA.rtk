    }

    Include = "ventas_header.inc";

    PAGEHEADER page_header_numero {
        sizey = 2;
        style = pageheader;

        OBJECT pageheader_OFERTAVENTA_NUMERO_CAPTION {
            fontsize = 14.0;
            value = "=const @DDD.OFERTAVENTA_DESCSINGULAR;";
            posx = 3;
            sizex = 20;
            fontweight = bold;
        }
        OBJECT pageheader_OFERTAVENTA_NUMERO {
            fontsize = 14.0;
            halignment = right;
            value = "=input.OFERTAVENTA_NUMERO;";
            sizex = 16.0;
            posx= 30;
            fontweight = bold;
        }
        OBJECT pageheader_OFERTAVENTA_FECHA_CAPTION {
            fontsize = 14.0;
            value = "=const @DDD.OFERTAVENTA_FECHA_CAPTION + \":\";";
            sizex = 8.0;
            posx = 50.0;
            fontweight = bold;
        }
        OBJECT pageheader_OFERTAVENTA_FECHA {
            fontsize = 14.0;
            value = "=input.OFERTAVENTA_FECHA;";
            posx = 60.0;
            format = "%d de %B de %Y";
            fontweight = bold;
        }
        borderbottomwidth = 2;
        borderbottomstyle = solid;
