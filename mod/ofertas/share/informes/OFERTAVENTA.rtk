            Source = OFERTAVENTA.FECHA;
            Type = date;
        }
        INPUTFIELD OFERTAVENTA_NUMERO {
            Source = OFERTAVENTA.NUMERO;
            Type = string;
        }
        INPUTFIELD OFERTAVENTA_NOTAS {
            Source = OFERTAVENTA.NOTAS;
