            value = "= input.ALBARANCOMPRA_BASEIMPONIBLE;";
            posx = 55.0;
            sizex = 14.0;
            halignment = "right";
        }
        OBJECT pagefooter_values_ALBARANCOMPRA_IVA_SIN_RECARGO {
