            Type = Money;
        }
        INPUTFIELD DOCUMENTO_TOTAL {
            Source = PEDIDOCOMPRA.TOTAL;
            Type = Money;
        }
        INPUTFIELD ARTICULO_DESCRIPCION {
            Source = PEDIDOCOMPRADET.DESCRIPCION;
            Type = Text;
        }
        INPUTFIELD IVADETALLADO {
            Source = PEDIDOCOMPRA.IVADETALLADO;
            Type = integer;
        }
        INPUTFIELD DESGLOSEIVA {
            Source = PEDIDOCOMPRA.DESGLOSEIVA;
            Type = string;
        }
//>>>>>INPUT_DEFAULT
        INPUTFIELD DOCUMENTO_ID {
            Source = PEDIDOCOMPRA.ID;
			Type = Integer;
        }
    }

	Include = "compras_header.inc";
    
    GROUPHEADER page_header_numero {
		level = 1;
		value = "=input.DOCUMENTO_ID";
        sizey = 1.4;
        style = pageheader;

        OBJECT pageheader_DOCUMENTO_NUMERO_CAPTION {
            fontsize = 14.0;
            value = "=const @DDD.PEDIDOCOMPRA_DESCSINGULAR;";
            posx = 3;
            sizex = 29;
            fontweight = bold;
			sizey = 1.4;
        }
        OBJECT pageheader_DOCUMENTO_NUMERO {
            fontsize = 14.0;
            value = "=input.DOCUMENTO_NUMERO;";
            sizex = 20.0;
            posx= -1;
            fontweight = bold;
			sizey = 1.4;
        }
        OBJECT pageheader_DOCUMENTO_FECHA_CAPTION {
            fontsize = 14.0;
            value = "=const @DDD.PEDIDOCOMPRA_FECHA_CAPTION + \":\";";
            sizex = 8.0;
            posx = 50.0;
            fontweight = bold;
			sizey = 1.4;
