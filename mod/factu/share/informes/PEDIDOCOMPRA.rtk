            formulabefore = "= if( @input.IVADETALLADO == 2 ) { @this.visible = true; } else { @this.visible = false; } return true;";
            value = "= const @DDD.PEDIDOCOMPRA_RECARGOEQUIVALENCIA_CAPTION;";
            posx = 70.0;
