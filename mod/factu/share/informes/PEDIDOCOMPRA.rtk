#define INCLUDE_CODIGO
    Include = "compras_details.inc";
	
	GROUPFOOTER page_footer_captions {
		level = 1;
		posy = -4.5;
        sizey = 1;
        style = pagefooter;

        OBJECT pagefooter_DOCUMENTO_SUMAIMPORTES {
