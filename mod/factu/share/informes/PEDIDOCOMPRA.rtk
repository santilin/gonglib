        INPUTFIELD DOCUMENTODET_DTOP100 {
            Source = PEDIDOCOMPRADET.DTOP100;
            Type = double;
        }
        INPUTFIELD DOCUMENTODET_IMPORTECONIVA {
            Source = PEDIDOCOMPRADET.IMPORTECONIVA;
            Type = Money;
        }
        INPUTFIELD DOCUMENTODET_IMPORTE {
            Source = PEDIDOCOMPRADET.IMPORTE;
            Type = Money;
        }
        INPUTFIELD DOCUMENTO_FECHA {
            Source = PEDIDOCOMPRA.FECHA;
            Type = date;
        }
        INPUTFIELD DOCUMENTO_NUMERO {
            Source = PEDIDOCOMPRA.NUMERO;
            Type = string;
        }
        INPUTFIELD DOCUMENTO_NOTAS {
            Source = PEDIDOCOMPRA.NOTAS;
            Type = string;
        }
        INPUTFIELD DOCUMENTO_SUMAIMPORTES {
            Source = PEDIDOCOMPRA.SUMAIMPORTES;
